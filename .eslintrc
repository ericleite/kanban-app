{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "react"
  ],
  "rules": {
    "quotes": [2, "single"],
    "semi": [1, "never"],
    "no-console": 0,
    "no-unused-vars": 1,
    "react/prop-types": 2,
    "react/no-multi-comp": 1,
    "react/jsx-closing-bracket-location": 1,
    "react/jsx-space-before-closing": [1, "never"]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
